@using Etat_de_stock_client.Models;
@using System.Globalization;
@{
    ViewBag.Title = "ConsulterEtatDeStock";
}

@{
    CultureInfo frenchCulture = new CultureInfo("fr-FR");
}

@*@ViewBag.response*@

